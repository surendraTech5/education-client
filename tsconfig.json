{
  "compilerOptions": {
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowImportingTsExtensions": true,
  },
  "include": ["src","src/types"]
}
